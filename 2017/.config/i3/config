set $red-hilight	 #dd0000

#                       border             background         text                 indicator
client.focused          $bg-color          #852222          $text-color          #660000
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #660000
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #660000
client.urgent 		$urgent-bg-color   $urgent-bg-color   $text-color 	 #660000

#---------------------------------------------------------------------------------------------

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        #status_command i3status
        #tray_output primary
	status_command ~/.config/i3/i3bar-conky
	
	colors {
		background $bg-color
	    	separator #757575
		#                  border             background         text
		focused_workspace  $bg-color          #dd0000         $text-color
		inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
	}
}


